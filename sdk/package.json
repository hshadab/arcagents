{
  "name": "@arc-agent/sdk",
  "version": "0.1.0",
  "description": "SDK for spawning and managing Arc Agents with x402 payment capabilities",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "arc",
    "agent",
    "x402",
    "ai",
    "payments",
    "usdc",
    "blockchain"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "viem": "^2.21.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "eslint": "^8.55.0"
  },
  "peerDependencies": {
    "viem": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
