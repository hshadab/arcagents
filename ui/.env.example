# Coinbase Developer Platform API Key (for x402 Bazaar)
# Get one at: https://portal.cdp.coinbase.com/
NEXT_PUBLIC_CDP_API_KEY=your_cdp_api_key_here

# Arc Network RPC
NEXT_PUBLIC_ARC_TESTNET_RPC=https://rpc.testnet.arc.network
NEXT_PUBLIC_ARC_MAINNET_RPC=https://rpc.arc.network

# Circle API Key (for Programmable Wallets & Compliance Engine)
# Get one at: https://console.circle.com/
CIRCLE_API_KEY=your_circle_api_key_here

# WalletConnect Project ID (optional - MetaMask/Coinbase Wallet work without it)
# Get one free at https://cloud.walletconnect.com/ if you want mobile wallet support
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# Deployer wallet private key (for contract interactions)
# WARNING: Never commit real private keys to version control
DEPLOYER_PRIVATE_KEY=your_deployer_private_key_here

# Deployed Contract Addresses (Arc Testnet - Chain ID 5042002)
NEXT_PUBLIC_ARC_AGENT_ADDRESS=0x982Cd9663EBce3eB8Ab7eF511a6249621C79E384
NEXT_PUBLIC_ARC_IDENTITY_ADDRESS=0x60287b849721EB7ed3C6BbdB34B46be02E0e2678
NEXT_PUBLIC_ARC_REPUTATION_ADDRESS=0x106e73c96da621826d6923faA3361004e2db72a7
NEXT_PUBLIC_ARC_PROOF_ATTESTATION_ADDRESS=0xBE9a5DF7C551324CB872584C6E5bF56799787952
NEXT_PUBLIC_ARC_TREASURY_ADDRESS=0x75E016aC75678344275fd47d6524433B81e46d0B
NEXT_PUBLIC_ARC_COMPLIANCE_ORACLE_ADDRESS=0xdB4E18Cc9290a234eB128f1321643B6c1B5936d1

# JOLT-Atlas zkML Prover Service (for real SNARK proof generation)
# Start with: cd jolt-atlas-fork && MODELS_DIR=./arc-prover/models PORT=3001 cargo run --release -p arc-prover
JOLT_ATLAS_SERVICE_URL=http://localhost:3001

# Enable real ONNX inference via /api/zkml/prove
USE_ZKML_API=true

# Security Settings
# Allowed origin for CORS (set to your production domain)
NEXT_PUBLIC_ALLOWED_ORIGIN=http://localhost:3000

# API Keys for server-to-server authentication (optional)
# Format: key1:name1,key2:name2
# If not set, authentication is skipped (development mode)
# Example: arc_abc123:service1,arc_xyz789:service2
API_KEYS=

# Logging level (debug, info, warn, error)
LOG_LEVEL=info
